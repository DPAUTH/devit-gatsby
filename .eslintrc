{
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "experimentalObjectRestSpread": true,
        "spread": true,
        "restParams" : true
      }
    },
    "env" : {
      "browser" : true,
      "node" : true,
      "es6" : true
    },
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true,
          "trailingComma": "es5",
          "printWidth": 100
        }
      ]
    }
  }
